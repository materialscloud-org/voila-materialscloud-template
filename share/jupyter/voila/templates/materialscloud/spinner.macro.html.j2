{% macro css() %}
  <!-- materialscloud loading animation -->
  <style>
    #loading {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 75vh;
        font-family: sans-serif;
    }
  </style>
{% endmacro %}

{% macro html(base_url) %}
  <div id="loading">
    <img style="width: 150px; text-align: center;" src="{{ base_url }}voila/static/images/mcloud_spinner.svg"/>
    <h2 id="loading_text">Loading {{nb_title}}...</h2>
    <p>This may take up towards 30 seconds, please wait.</p>
    <p>If this takes longer than normal, <a href="{{ open_url }}">click here</a>.</p>
  </div>
{% endmacro %}
